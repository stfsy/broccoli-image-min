{
  "name": "broccoli-image-min",
  "version": "2.2.0",
  "description": "Broccoli plugin for minifying .jpg, .png, .svg and .gif with imagemin",
  "main": "lib/index.js",
  "author": "Harris Miller",
  "contributors": [
    "Stefan Pfaffel"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stfsy/broccoli-image-min"
  },
  "scripts": {
    "test": "mocha test/specs --timeout 20000",
    "test-watch": "mocha test/spec --watch",
    "preversion": "npm run test",
    "version": "npm run changelog && git add -A CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "release-major": "npm version major -m \"chore(release): v%s\"",
    "release-minor": "npm version minor -m \"chore(release): v%s\"",
    "release-patch": "npm version patch -m \"chore(release): v%s\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "keywords": [
    "broccoli-plugin",
    "broccoli",
    "plugin",
    "compress",
    "minify",
    "image",
    "img",
    "gif",
    "jpeg",
    "jpg",
    "png",
    "svg"
  ],
  "dependencies": {
    "broccoli-plugin-adapter": "^1.4.0",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0"
  },
  "devDependencies": {
    "broccoli": "^3.5.2",
    "broccoli-cli": "^1.0.0",
    "broccoli-test-runner": "^1.3.0",
    "chai": "^4.3.4",
    "conventional-changelog-cli": "^2.1.1",
    "mocha": "^7.2.0",
    "rimraf": "^3.0.2"
  }
}
